<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@post.errors.count, "error") %> displeased the zebra Gods. Your sacrifice was not accepted: </h2>
		<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %> 
			</li>
			<% end %>
		</ul>
	</div>
	<% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

